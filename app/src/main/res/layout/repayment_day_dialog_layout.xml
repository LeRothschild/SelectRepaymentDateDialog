<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/content"
              android:layout_width="280dp"
              android:layout_height="185dp"
              android:background="@drawable/dialog_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:text="还款日提醒"
        android:textAppearance="@style/font_gray_3_17"/>

    <com.example.weioule.selectrepaymentdatedialog.PickerView
        android:id="@+id/minute_pv"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gen_line_bg_color"/>

    <RelativeLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/gen_line_bg_color"/>

        <TextView
            android:id="@+id/closeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/vLine"
            android:background="@drawable/dialog_left_btn_bg"
            android:gravity="center"
            android:text="关闭提醒"
            android:textAppearance="@style/font_blue_0076FF_17"/>

        <TextView
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/vLine"
            android:background="@drawable/dialog_right_btn_bg"
            android:gravity="center"
            android:text="确认"
            android:textAppearance="@style/font_blue_0076FF_17"/>

    </RelativeLayout>
</LinearLayout>



